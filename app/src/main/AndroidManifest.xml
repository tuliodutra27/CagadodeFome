<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.iff.cagadodefome">

    <application
        android:allowBackup="true"
        android:icon="@drawable/fast_food"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fast_food"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListaInicialActivity" />
        <activity
            android:name=".ListaPizzariasActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ActivityPizzaria"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>